%div.log_in 
  %h2.log Sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = f.error_notification
    .form-group
      = f.label :email
      = f.email_field :email, required: false, class: 'form-control', autofocus: true
    .form-group
      = f.label :password
      = f.password_field :password, required: false, class: 'form-control', autofocus: true
    .form-group
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .actions
      = f.submit "Sign in",  class: "btn btn-default"
  = render "devise/shared/links"
